<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session6.Orders"
             Title="Orders">
    <ScrollView>
        <StackLayout>

            <VerticalStackLayout
            WidthRequest="600"
            Margin="20"
            Padding="10">

                <Label Text="History" FontSize="Medium" FontAttributes="Bold" Margin="0, 20, 0, 0"/>

                <SearchBar x:Name="historySearchBar" TextChanged="historySearchBar_TextChanged" Margin="0, 10, 0, 0"/>

                <CollectionView
                Margin="0, 20, 0, 0"
                ItemsSource="{Binding Orders}"
                HeightRequest="850">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                            CornerRadius="15"
                            Margin="20"
                            Padding="20">
                                <Grid
                                RowSpacing="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding Product.PhotoName}" Grid.Column="0" WidthRequest="120" Grid.RowSpan="3"/>
                                    <Label Text="{Binding Product.Name}" Grid.Column="1" Grid.Row="0" FontAttributes="Bold"/>
                                    <Label Text="{Binding Quantity, StringFormat='Quantity: {0}'}" Grid.Column="1" Grid.Row="1"/>
                                    <Label Text="{Binding TotalValue, StringFormat='Total: {0}'}" Grid.Column="2" Grid.Row="2"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>